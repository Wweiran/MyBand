<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/tv_sport_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="运动数据"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"/>
    
    <TextView
        android:id="@+id/tv_sport_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_sport_data"
        app:layout_constraintTop_toBottomOf="@+id/tv_sport_data"
        tools:text="速度："/>
    
    <TextView
        android:id="@+id/tv_sport_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_sport_data"
        app:layout_constraintTop_toBottomOf="@+id/tv_sport_speed"
        tools:text="温度："/>
    
    <TextView
        android:id="@+id/tv_sport_uv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_sport_data"
        app:layout_constraintTop_toBottomOf="@+id/tv_sport_temperature"
        tools:text="紫外线："/>
    
    <TextView
        android:id="@+id/tv_sport_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_sport_data"
        app:layout_constraintTop_toBottomOf="@+id/tv_sport_uv"
        tools:text="步数："/>
    
    <TextView
        android:id="@+id/tv_sport_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_sport_steps"
        app:layout_constraintTop_toBottomOf="@+id/tv_sport_steps"
        tools:text="总步数："/>
</android.support.constraint.ConstraintLayout>